<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LeaderElectionNodeStyle">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">@color/nodeText</item>
        <item name="android:textSize">13sp</item>
        <item name="android:background">@drawable/node_bg</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="LeaderElectionFontStyleCaption">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="LeaderElectionFontStyleInfo">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="LeaderElectionFontStyleAlgorithmInfo">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="LeaderElectionFontStyleAlgorithmPerformance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="LeaderElectionFontPopupNode">
        <item name="android:textColor">@color/nodeText</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="LeaderElectionButtonStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/btn_shape</item>
    </style>

    <style name="LeaderElectionSliderFontStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">5dp</item>
    </style>

    <style name="LeaderElectionSliderDescriptionFontStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>

    <style name="LeaderElectionSliderButtonStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="LeaderElectionSliderTitleFontStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">32sp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="LeaderElectionSliderSubtitleFontStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">25sp</item>
    </style>

</resources>